<% if (post.tags && post.tags.length){ %>
    <div class="post-tag">
        <i class="lb-icon-tag" title="<%= __('tag') %>"></i>
        <% post.tags.each(function(tag, i){ %>
            <a class="tag-item" href="<%- url_for(tag.path) %>"><%= tag.name %></a>
        <% }) %>
    </div>
<% } %>
